<p id="notice"><%= notice %></p>

<h1 class="tablename">Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Show', category, class: "btn btn-sm btn-success"%></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-sm btn-primary"%></td>
        <td><%= link_to 'Destroy', category,class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: "create"%>
